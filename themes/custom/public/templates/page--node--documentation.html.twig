{{ navbar }}

<div class="content">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        {{ page.page_title_block }}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {{ page.system_breadcrumb_block }}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {{ page.tabs_block }}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {{ page.local_actions_block }}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {{ page.system_messages_block }}
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        {{ documentation_menu }}
      </div>
      <div class="col-md-8">
        {{ page.system_main_block }}
        <div id="disqus_thread"></div>
        <script>
          var disqus_config = function () {
            this.page.url = '{{ disqus_config_page_url }}';
            this.page.identifier = {{ disqus_config_page_identifier }};
          };

          (function() {
            var d = document, s = d.createElement('script');

            s.src = '//dockerizedrupal.disqus.com/embed.js';

            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
          })();
        </script>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="social-media-icons">
          <div class="row">
            <div class="col-md-6 col-md-push-3">
              {{ page.social_media_icons }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="footer">
  <div class="container">
    <div class="logos text-align-center">
      {{ page.logos }}
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="legal text-align-center">
          <div class="row">
            <div class="col-xs-12 col-md-10 col-md-push-1">
              {{ page.legal }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
